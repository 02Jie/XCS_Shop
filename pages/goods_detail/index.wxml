<view class="detail_swiper">
    <swiper class="" indicator-dots="{{true}}" circular="{{true}}" autoplay="{{true}}">
        <swiper-item class="" item-id="" wx:for="{{goodsDetail.pics}}" wx:for-item="item" wx:for-index="index" bindtap="handleImg" data-url="{{item.pics_mid}}">
            <image class="" src="{{item.pics_mid}}" mode="widthFix" />
        </swiper-item>
    </swiper>
</view>
<view class="detail_name_row">
    <view class="price">￥{{goodsDetail.goods_price}}</view>
    <view class="introduce">
        <view class="left">{{goodsDetail.goods_name}}</view>
        <view class="right" bindtap="handleCollect">
            <view class="iconfont {{isCollect ? 'icon-shoucang1' : 'icon-shoucang'}}"></view>
            <div class="txt">收藏</div>
        </view>
    </view>
</view>
<view class="info">
    <view class="title">图文详情</view>
    <rich-text class="" nodes="{{goodsDetail.goods_introduce}}"></rich-text>
</view>
<!-- 底部购物车 -->
<view class="footer">
    <view class="continer">
        <view class="footerItem">
            <view class="iconfont icon-kefu"></view>
            <view>联系客服</view>
            <button open-type="contact"></button>
        </view>
        <view class="footerItem">
            <view class="iconfont icon-fenxiang"></view>
            <view>分享</view>
            <button open-type="share"></button>
        </view>
        <navigator class="footerItem" url="../../pages/cart/index" open-type="switchTab">
            <view class="iconfont icon-gouwuche"></view>
            <view>购物车</view>
        </navigator>
        <view class="carts"  bindtap="addCarts">加入购物车</view>
        <view class="buy">立即购买</view>
    </view>
</view>